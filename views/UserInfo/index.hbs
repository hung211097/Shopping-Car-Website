  <!-- Start Edit name modal -->
  <div id="editNameModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Thay đổi tên khách hàng</h4>
        </div>
        <div class="modal-body">
          <form class="" action="EditName" method="post" name="EditName">
            <fieldset class="form-group">
              <label for="Name">Họ và tên mới</label>
              <div class="form-group form-name has-feedback">
                <input type="text" class="form-control" id="txtRealName" placeholder="" name="Name">
                <p class="help-block name-null">Vui lòng điền thông tin vào đây!</p>
                <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              </div>
            </fieldset>
            <div class="text-center">
              <button id="btnEN" class="btn btn-SignIn" type="submit" name="button-editName">Xác nhận</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- End Edit name modal -->

  <!-- Start Edit pass modal -->
  <div id="editPassModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Thay đổi mật khẩu</h4>
        </div>
        <div class="modal-body">
          <form class="" action="" method="post" name="EditPass">
              <fieldset class="form-group">
                  <label for="OldPass">Mật khẩu cũ</label>
                <div class="form-oldpass form-group has-feedback">
                  <input type="password" class="form-control" id="txtUserOldPass" placeholder="" name="OldPass">
                  <p class="help-block oldpass-null">Vui lòng điền thông tin vào đây!</p>
                    <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                </div>
              </fieldset>
                <fieldset class="form-group">
                    <label for="NewPass">Mật khẩu mới</label>
                    <div class="form-newpass  form-group has-feedback">
                      <input type="password" class="form-control" id="txtUserNewPass" placeholder="" name="NewPass">
                      <p class="help-block newpass-null">Vui lòng điền thông tin vào đây!</p>
                        <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    </div>
                </fieldset>
                <fieldset class="form-group">
                    <label for="ReNewPass">Nhập lại mật khẩu mới</label>
                    <div class="form-renewpass  form-group has-feedback">
                      <input type="password" class="form-control" id="txtUserReNewPass" placeholder="" name="ReNewPass">
                      <p class="help-block renewpass-null">Vui lòng điền thông tin vào đây!</p>
                      <p class="help-block renewpass2-null">Mật khẩu không trùng khớp!</p>
                        <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    </div>
                </fieldset>
            <div class="text-center">
              <button id="btnEP" class="btn btn-SignIn" type="submit" name="button-editPass">Xác nhận</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- End Edit pass modal -->

  <!-- Start Edit phone modal -->
  <div id="editEmailModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Thay đổi email</h4>
        </div>
        <div class="modal-body">
          <form class="" action="EditEmail" method="post" name="EditEmail">
              <fieldset class="form-group">
                <label for="NewEmail">Email mới</label>
                <div class="form-email form-group has-feedback">
                  <input type="text" class="form-control" id="txtEmail" placeholder="" name="NewEmail">
                  <p class="help-block email-null">Vui lòng điền đúng định dạng email!</p>
                    <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                </div>
              </fieldset>
            <div class="text-center">
              <button id="btnEM" class="btn btn-SignIn" type="submit" name="button-editEmail">Xác nhận</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
