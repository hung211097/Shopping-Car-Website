<div class="panel panel-primary">
	<div class="panel-heading">
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
				<h3 class="panel-title" style="color: white"></i>Thêm hãng xe mới vào danh sách</h3>
			</div>
		</div>
	</div>
	<div class="panel-body" id="pad-bot">
		<form action="process.html" method="POST" role="form">
			<legend>Thông tin chung</legend>
			<div class="row" id="input">
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<div class="row">
						<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
							<label>Chọn hình ảnh hãng xe:</label>
						</div>
						<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
							<input type="file" id="i_file"/>
						</div>
					</div>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<div class="row">
						<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
							<label>Mã hãng xe:</label>
						</div>
						<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
							<input type="text" style="pointer-events:none"class="form-control" value="{{maTangDan}}">
						</div>
					</div>
				</div>
			</div>
			<div class="row" id="input">
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<div class="row">
						<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
							<label>Tên hãng xe:</label>
						</div>
						<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
							<input type="text" class="form-control">
						</div>
					</div>
				</div>
			</div>

			<div class="row" id="foot">
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<div class="row">
						<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
						</div>
						<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
							<button type="submit" class="btn btn-primary" id="btnSub">Thêm</button>
							<a class="btn btn-default" href="/manageManufacturer" role="button">
								<span class="glyphicon glyphicon-arrow-left"></span>
								Quay trở lại xem danh sách hãng xe
							</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

