<div class="panel panel-primary">
	<div class="panel-heading">
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
				<h3 class="panel-title" style="color: white"></i>Thêm dòng xe mới vào danh sách</h3>
			</div>
		</div>
	</div>
	<div class="panel-body" id="pad-bot">
		<form action="" method="POST" role="form">
			<legend>Thông tin chung</legend>
			<div class="row" id="input">
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<div class="row">
						<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
							<label>Chọn hình ảnh dòng xe:</label>
						</div>
						<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
							<input type="file" id="i_file"/>
						</div>
					</div>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<div class="row">
						<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
							<label>Mã dòng xe:</label>
						</div>
						<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
							<input type="text" class="form-control" value="{{maTangDan}}" readonly>
						</div>
					</div>
				</div>
			</div>
			<div class="row" id="input">
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<div class="row">
						<div class="form-group form-TenDongXe has-feedback">
							<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
								<label>Tên dòng xe:</label>
							</div>

							<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
								<input type="text" name="TenDongXe" value="" class="form-control">
								<p class="help-block TenDongXe-null">Vui lòng điền thông tin vào đây!</p>
								<span class="glyphicon glyphicon-ok form-control-feedback"></span>
								<span class="glyphicon glyphicon-remove form-control-feedback"></span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="row" id="foot">
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<div class="row">
						<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
						</div>
						<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
							<button type="submit" class="btn btn-primary" id="btnSub">Thêm</button>
							<a class="btn btn-default" href="/manageKindOfCar" role="button">
								<span class="glyphicon glyphicon-arrow-left"></span>
								Quay trở lại xem danh sách dòng xe
							</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

